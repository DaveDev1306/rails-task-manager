<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <% if task.completed %>
    <i class=“fa fa-check-square-o”></i>
    <% else %>
<i class="fa fa-square-o" aria-hidden="true"></i>
 <% end %>

    <%= link_to task.title, task_path(task.id) %>
  <% end %>
</ul>

